}

.field_with_errors input::-moz-placeholder {
    color:       #902D00;
    font-size:   15px;
}

.field_with_errors input:-moz-placeholder {
    color:       #902D00;
    font-size:   15px;
}
		
.field_with_errors input:-ms-input-placeholder { 
    color:       #902D00;
    font-size:   15px;
