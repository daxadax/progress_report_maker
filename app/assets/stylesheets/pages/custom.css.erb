		/*******************************/
		/****general design elements****/
		/*******************************/

.center {
	text-align: center;
	margin-left: auto;
	margin-right: auto;
}

.right {
	text-align: right;
}

.float_right {
	float:right;
}

.float_left {
	float:left;
}

.bottom_left {
	position: absolute;
	bottom:   10%;
	left:     10%;
}

.bottom_right {
	position:  absolute;
	bottom:    10%;
	right:     10%;
}

.round {
	-moz-border-radius:    15px;
    -webkit-border-radius: 15px;
    -khtml-border-radius:  15px;
    border-radius:         15px;
}

.strong {
	font-weight: bold;
}

.unselectable {
	-webkit-user-select: 	none; /* Chrome/Safari */        
	-moz-user-select: 		none; /* Firefox */
	-ms-user-select: 		none; /* IE10+ */

	/* Rules below not implemented in browsers yet */
	-o-user-select: 		none;
	user-select: 			none;
	
	/*http://stackoverflow.com/questions/826782/css-rule-to-disable-text-selection-highlighting*/
	-webkit-touch-callout:  none;
	-webkit-user-select:    none;
	-khtml-user-select:     none;
	-moz-user-select:       none;
	-ms-user-select:        none;
	user-select: 			none;
}

.lil_link {
	font-size:   50%;
	color:       #81C6FF;
}

.superscript_x {
	vertical-align: super;
	font-size:      50%;
	color:          red;
}

		/*********************/
		/**** page layout ****/
		/*********************/

.container {
	width: 88%;
}

header {
	font-family: 'Shadows Into Light Two', cursive;
	font-size:     150%;
	width:         100%;
	height:        50px;
	opacity:       0.95;
	  /*POSITION*/
	position:      absolute;
	top:           0px;
	left:          0px;	
}

header h2 {
	margin-left:   25px;
	margin-top:    10px;
}

body {
	background-image: url('/assets/pages_bg.png');
}

section {
	margin-top: 7em;
	font-size:  120%;
	padding:    20px;
}

section h1,h2,h3,h4 {
	font-family:     'Shadows Into Light Two', cursive;
	font-size:       350%;
	letter-spacing:  5px;
	color:           #81C6FF;
	text-shadow:     3px 2px 2px #3E7CB0, 2px 3px 3px rgba(0,0,0,0.25);
}

section p {
	margin-top:  2em;
    font-family: Verdana, sans-serif;
	font-size:   105%;
	color:       #fff;
}

section a {
	color: #FF4F00;
	text-shadow:     -1px 2px 2px #035090, -2px 3px 3px rgba(0,0,0,0.25);
	text-decoration: none;
}

a:hover {
	color:  #fff;
	cursor: pointer;
}

nav {
	float: right;
	whitespace: nowrap;
	padding: 1em;
}

nav ul {
	margin: 0;
	padding: 0;
}

nav ul li {
	list-style-type: none;
	display: inline-block;
	padding: 0.2em;
}

nav ul li a {
	padding: 3px;
	font-weight: bold;
	color: #902D00;
	text-decoration: none;
}

nav ul li a:hover {
	color:  #fff;
}

/*nav ul li a:visited {
	color: #00ff9f;
}*/

footer {
	font-family: 'Shadows Into Light Two', cursive;
	font-size:     150%;
	text-align:   right;
	width:        100%;
	margin-top:   10px;
	margin-right: auto;
	margin-left:  auto;
}

