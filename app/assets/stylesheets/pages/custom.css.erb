		/*****************/
		/**** buttons ****/
		/*****************/
#buttons {
	position: relative;
	margin-top: 12.5%;
}

.small_button {
	width:           100px;
	background:      #1093FF;
	border:          2px #035090 solid;
	font-family:     'Shadows Into Light Two', cursive;
    text-shadow:     3px 1px 3px #035090, 3px 3px 0px rgba(0,0,0,0.15);
    font-size:       100%;
	text-decoration: none;
	text-align:      center;	
}

.small_button a {
	color: #902D00; 
}

.small_button:hover {
	background:  #694D8A;
	border:      2px #37195A solid;
	text-shadow: 3px 1px 3px #035090, 3px 3px 0px rgba(0,0,0,0.15);
}

.small_button:hover a {
	color: #6C7F21;
}

.big_button {
	background:      #1093FF;
	border:          2px #035090 solid;
	font-family:     'Shadows Into Light Two', cursive;
    color:           #902D00; 
    text-shadow:     3px 1px 3px #035090, 3px 3px 0px rgba(0,0,0,0.15);
	font-size:       200%;
	text-decoration: none;
	min-width:       300px;
	margin:          5px 5px 5px 5px;
	padding:         20px;
	text-align:      center;
	margin-left:     auto;
    margin-right:    auto;
}

.big_button:hover {
	background:  #694D8A;
	border:      2px #37195A solid;
	color:       #6C7F21;
	text-shadow: 3px 1px 3px #37195A, 3px 3px 0px rgba(0,0,0,0.15);
}


		/***************************/
		/**** fields and errors ****/
		/***************************/

.form_section {
	position:   relative;
	width:      40%;
	background: rgba(0, 0, 0, 0.0);
/*	border:     3px #88935E solid;*/
	padding:    7px 7px 7px 7px;
	margin-top: 1em;
}

.form_field {
	color: #fff;
}

.form_field input {
	width:   		   	   300px;
	height: 			   45px;
	background:            rgba(0, 0, 0, 0.0);
    border:                1px solid rgba(255, 148, 0, 0);
	color:                 #fff;
	font-size:  		   15px;
	padding-left: 		   15px;	
	/*Rounded*/
	-moz-border-radius:    5px;
    -webkit-border-radius: 5px;
    -khtml-border-radius:  5px;
    border-radius:         5px;
}

.form_field input:focus {
	background: rgba(0, 0, 0, 0.0);
    border:     1px solid rgba(0, 0, 0, 0);
}

.field_with_errors input {
	width:   		   	   300px;
	height: 			   45px;
	background:            rgba(0, 0, 0, 0.0);
    border:                1px solid rgba(0, 0, 0, 0);
	color:                 #fff;
	font-size:  		   15px;
	padding-left: 		   15px;	
	opacity:               0.9;
	/*Rounded*/
	-moz-border-radius:    5px;
    -webkit-border-radius: 5px;
    -khtml-border-radius:  5px;
    border-radius:         5px;
}

#error_explanation {
	font-weight: bold;
}

.header_error {
	margin:        auto auto;
	font-size:     60%;
	text-align:    center;
/*	margin-bottom: -4em;
	margin-top:    -3em;*/
/*	width:       450px;*/
}
       

