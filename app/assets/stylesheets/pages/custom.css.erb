		/*******************************/
		/****general design elements****/
		/*******************************/

.center {
	text-align: center;
	margin-left: auto;
	margin-right: auto;
}

.right {
	text-align: right;
}

.clear {
	clear: both;
}

.float_right {
	float:right;
}

.float_left {
	float:left;
}

.bottom_left {
	position: absolute;
	bottom:   10%;
	left:     10%;
}

.bottom_right {
	position:  absolute;
	bottom:    10%;
	right:     10%;
}

.padding-top {
	padding-top: 12px;
}

.round {
	-moz-border-radius:    13px;
    -webkit-border-radius: 13px;
    -khtml-border-radius:  13px;
    border-radius:         13px;
}

.strong {
	font-weight: bold;
}

.unselectable {
	-webkit-user-select: 	none; /* Chrome/Safari */        
	-moz-user-select: 		none; /* Firefox */
	-ms-user-select: 		none; /* IE10+ */

	/* Rules below not implemented in browsers yet */
	-o-user-select: 		none;
	user-select: 			none;
	
	/*http://stackoverflow.com/questions/826782/css-rule-to-disable-text-selection-highlighting*/
	-webkit-touch-callout:  none;
	-webkit-user-select:    none;
	-khtml-user-select:     none;
	-moz-user-select:       none;
	-ms-user-select:        none;
	user-select: 			none;
}

.lil_link {
	font-size:   50%;
	color:       #81C6FF;
}

.superscript_x {
	vertical-align: super;
	font-size:      50%;
	color:          red;
}

.display {
	display: inline;
}

