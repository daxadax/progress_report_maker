<header class="unselectable">
	<div class="float_left <%= @title_hide %>">
    <h2><%= link_to logo, root_path %> <%= @title %></h2>
	</div>
	
	<nav class="round">
		<ul>
			<% if logged_in? %>
			  <li><%= link_to "Groups", groups_path %></li>
			  <li><%= link_to "Goals", goals_path %></li>
			  <li><%= link_to "Settings", settings_path %></li>
			  <li><%= link_to "Log out", logout_path %></li>
			<% else %>
			  <li><%= link_to "Log In", login_path unless request.path == login_path %></li>
			<% end %>
		</ul>
	</nav>
</header>
<br />