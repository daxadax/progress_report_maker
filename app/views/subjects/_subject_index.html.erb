<!-- if "Group_by_STUDENT_GROUP" -->

<% @subjects.each do |group, subjects| %>
  <div class="holder round">
  <h1><%= link_to group.name, group_path(group) %></h1><hr />
  <table>  
		<tbody>
		  <% subjects.each do |subject| %>
		  <tr class="<%= cycle("odd", "even")%>">
		    <td><%= link_to subject.name, subject_path(subject, {student_group_id: subject.student_group_id}) %></td>
		    <td><%= subject.weeks_left %> remaining</td>
		    <% if subject.avg.nan? %>
				  <td class="strong">No data yet!</td>
				<% else %>
				  <td class="avg_row"><%= subject.avg %></td>
				<% end %>
		  </tr>
		  <% end %>
	  </tbody>
	</table>
	</div>
<% end %>

