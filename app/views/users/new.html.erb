<%= form_for(@user) do |f| %>
	<%= render 'shared/error_messages' %>
  <div class="signup_box" "round">
  	<%= f.text_field :name, placeholder: "Full name" %><br />
		<%= f.email_field :email, placeholder: "Email address" %><br />
		<%= f.password_field :password, placeholder: "Password" %><br />
		<%= f.password_field :password_confirmation, placeholder: "Type your password again" %>			
		<%= f.submit "Get Started!" %>
	</div>
<% end %>	