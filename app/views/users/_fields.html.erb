<div class="form_field round">
 	  <%= f.label :name, "Your full name:" %>
    <%= f.text_field :name, placeholder: "..." %>
</div>

<div class="form_field round">
	  <%= f.label :email, "Your email address:" %>
	  <%= f.email_field :email, placeholder: "..." %>
</div>

<div class="form_field round">
    <%= f.label :password, "Your password:" %>
