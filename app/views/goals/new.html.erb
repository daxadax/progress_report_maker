<div class="holder round unselectable">
	
	<h3>
		What goals do you have for <%= @subject.name %>?
	</h3>

    <span id="show_goal_help">
	    <%= content_tag("a", "hints for writing good goals") %>
	  </span>
  
  <div id="help" class="holder2 round clear">
    <%= render 'goals_help' %>
  </div>

  <div class="holder2 round">
		<%= form_for([@subject, @goal]) do |f| %>
  	  <%= render 'goal_fields'%>    
  </div>
      <%= f.submit "Submit", :class => 'big_button round unselectable' %>
    <% end %>
</div>

