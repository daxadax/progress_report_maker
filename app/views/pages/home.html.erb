<header>
	<section id="menu_box" class="unselectable">

		<%= form_for(:session, :url => sessions_path) do |f| %>

	    <div class="input email_input">
		    <%= f.email_field :email, placeholder: "Email address" %><br />
		  </div>

		  <div class="input password_input">
		    <%= f.password_field :password, placeholder: "Password" %><br />
	    </div>		

		  <div>
				<%= f.submit "Log in", :class => 'login_button' %>
	    </div>

	  <% end %>

	</section>
</header>

 
<div id="home_logo" class="unselectable">
  <%= image_tag("ganesh.png") %>
</div>

<div id="landing_text" class="unselectable">
	<h2 unselectable="on">Ganesh is a tool to help define goals and evaluate how well they have been met</h2>
</div>

