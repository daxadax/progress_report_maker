<!-- Group Name -->
<div class="holderv round float_left">
	<h1>
    <%= group.name %>
  </h1>
  	<%= content_tag("a", "âˆ†", class: "toggle_group_name") %>
</div>

<div class="holder round clear group_name"> 

  <!-- Evaluate Link -->

  <h1 class="float_right evaluate">
	  <% if group.has_goals? %>
  	  <%= link_to "Evaluate!", eval_note_path(group) %>
    <% else %>
      <%= link_to "Evaluate!", eval_fail_path(group) %>
    <% end %>
  </h1>
  
  <!-- Subjects -->
  
 	<div class="clear indent-left">
  	<div class="holder2 round">
  		<h2>
		  	<%= render 'subject_count', :group => group %>
		  </h2>
		  <div class="indent-left">
		    <%= render 'subject_list', :group => group %>
		  </div>
  	</div>
  </div>

  <!-- Students -->

  <div class="indent-left">
  	<div class="holder2 round">
  		<h2>
		    <%= render 'student_count', :group => group %>
		  </h2>
			<div class="indent-left">
				<% if group.students.empty? %>   
				  <p>
				   	You don't have any students yet!
				  </p>
					<%= link_to "Add a student", new_student_group_student_path(group), class: "big_button round unselectable" %>
				<% else %>
				  <%= render 'student_list', :group => group %>
			  <% end %>
		  </div>
  	</div>
  </div>
  <br />
	

  <!-- EDIT AND DELETE BUTTONS -->
  <div class="edit">
  	<%= link_to "edit", edit_student_group_path(group), 
                        class: "lil_link" %> 
  </div>
  <div class="delete">
	  <%= link_to "X", {controller: 'student_groups', 
                      action: 'destroy',
                      id: group },
                     {confirm: "Do you really want to delete #{group.name}?",
                      method: :delete, 
                      class: "lil_link"} %>
  </div>
</div>
