<table class="student_groups_index">
  
  <% @student_groups.each do |group| %>
	   <tbody> 
	    <tr>
	    	<th>
	        <%= link_to group.name, class_path(group) %> 
	        <%= link_to "Edit", edit_student_group_path(group), 
	                            class: "lil_link" %>
		      <%= link_to "Delete", {controller: 'student_groups', 
				                         action: 'destroy', 
				                         user_id: @user.id, 
				                         id: group },
		                             {confirm: "Do you really want to delete #{group.name}?",
			                           method: :delete, 
			                           class: "lil_link"} %>
		    </th>
	    </tr>
		  <tr>
		  	<td> # of students </td>
		    <td> subjects studied </td>
		    <td> length of course </td>
		    <td> goals </td>
		  </tr>
		</tbody>
  <% end %>

</table>

<p>
	<%= link_to "Create a new group", new_student_group_path %>
</p>