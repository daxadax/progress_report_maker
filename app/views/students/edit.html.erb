<%= form_for([@student_group, @student]) do |f| %>
	
  <div class="form_section round">
		<div class="form_field round">
			<%= f.label :name, "What should the student's name be?" %>
			<%= f.text_field :name %><br />	
		</div>
		<div class="form_field round">
			<%= f.label :gender, "What should the student's gender be?" %>
			<%= f.select :gender, ['Female', 'Male', 'Transgender'] %><br />	
		</div>
		<%= f.submit "Submit", :class => 'big_button round unselectable' %>
  </div>

<% end %>